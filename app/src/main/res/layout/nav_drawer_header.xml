<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/nav_header_gradient">

    <!-- App Logo/Icon -->
    <ImageView
        android:id="@+id/nav_app_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/nav_image"
        android:scaleType="centerInside"
        android:background="@drawable/circle_background_light"
        android:padding="8dp"
        android:elevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp" />

    <!-- App Title and Subtitle -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintStart_toEndOf="@id/nav_app_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/nav_app_icon"
        app:layout_constraintBottom_toBottomOf="@id/nav_app_icon">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GCE Results"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:shadowColor="#40000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your trusted results companion"
            android:textColor="#E0FFFFFF"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:shadowColor="#40000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2" />

    </LinearLayout>

    <!-- Decorative Elements -->
    <View
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/circle_background_light"
        android:alpha="0.1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="-40dp"
        android:layout_marginTop="-40dp" />

    <View
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle_background_light"
        android:alpha="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="-30dp"
        android:layout_marginBottom="-30dp" />

</androidx.constraintlayout.widget.ConstraintLayout>