                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:text="ðŸ”"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Search Processing"
                                android:textColor="@color/blue_light"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="To find and display your GCE results"
                                android:textColor="#666666"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:text="ðŸ“ˆ"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="App Improvement"
                                android:textColor="@color/blue_light"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="To enhance user experience and fix issues"
                                android:textColor="#666666"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:text="ðŸ›¡ï¸"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Security &amp; Support"
                                android:textColor="@color/blue_light"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="To provide technical support and maintain security"
                                android:textColor="#666666"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Data Protection Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="#E8F5E8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_privacy"
                    app:tint="#4CAF50"
                    android:layout_marginEnd="12dp"
                    android:layout_gravity="top"
                    android:layout_marginTop="2dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ” Data Protection"
                        android:textColor="#4CAF50"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="We do not sell, trade, or share your personal information with third parties. Your data is used solely for the purposes stated in this policy."
                        android:textColor="#4CAF50"
                        android:textSize="14sp"
                        android:lineSpacingMultiplier="1.3" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Full Policy Link Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“„ Complete Privacy Policy"
                    android:textColor="@color/blue_light"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/privacy_policy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="For the complete and detailed privacy policy, including information about cookies, data retention, and your rights, please visit our full privacy policy document."
                    android:textColor="#4A4A4A"
                    android:textSize="15sp"
                    android:lineSpacingMultiplier="1.4"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btn_view_full_policy"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="ðŸ“– View Full Policy"
                    android:textColor="@color/blue_light"
                    android:textSize="14sp"
                    android:background="@drawable/button_github_secondary"
                    android:textAllCaps="false"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Contact Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/info_background"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_contact"
                app:tint="@color/blue_light"
                android:layout_marginEnd="8dp"
                android:layout_gravity="top"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Have questions about our privacy practices? Contact us through the 'Contact Us' section."
                android:textColor="@color/blue_light"
                android:textSize="13sp"
                android:lineSpacingMultiplier="1.2" />

        </LinearLayout>

        <!-- Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last updated: 2024 â€¢ Your privacy is our priority"
            android:textColor="#888888"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>