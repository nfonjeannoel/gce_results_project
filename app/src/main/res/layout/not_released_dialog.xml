<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    app:cardBackgroundColor="@color/blue_white"

    android:layout_height="match_parent">


    <RelativeLayout

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_margin="2dp">


        <!--image view for displaying course image-->

        <ImageView

            android:id="@+id/idIVCourse"

            android:layout_width="70dp"

            android:layout_height="70dp"
            app:tint="@color/purple_200"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_error" />


        <!--text view for displaying course name-->

        <TextView

            android:id="@+id/idTVCourseName"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"

            android:layout_toEndOf="@id/idIVCourse"

            android:layout_toRightOf="@id/idIVCourse"

            android:text="Results coming soon!"

            android:textColor="@color/purple_200"

            android:textSize="18sp"

            android:textStyle="bold" />


        <!--text view for displaying course tracks-->

        <TextView

            android:id="@+id/idTVCourseTracks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@id/idTVCourseName"

            android:layout_marginTop="2dp"

            android:layout_toEndOf="@id/idIVCourse"

            android:layout_toRightOf="@id/idIVCourse"

            android:paddingEnd="4dp"

            android:text="No records were found for this level number and year. You can:"

            android:textColor="@color/black"

            android:textSize="13sp" />


        <!--text view for displaying course duration-->

        <TextView
            android:id="@+id/tv_point_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVCourseTracks"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/idIVCourse"
            android:paddingEnd="4dp"
            android:text="1. Visit our blog for latest updates"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_point_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_point_1"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/idIVCourse"
            android:layout_toRightOf="@id/idIVCourse"
            android:paddingEnd="4dp"
            android:text="@string/point_2"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_point_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_point_2"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/idIVCourse"
            android:layout_toRightOf="@id/idIVCourse"
            android:paddingEnd="4dp"
            android:text="3. Result for this year are not available in our database"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_point_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_point_3"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="If this problem persist, please contact us"
            android:textColor="@color/black"
            android:textSize="12sp" />


        <!--button for dismissing our dialog-->

        <Button

            android:id="@+id/idBtnDismiss"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_below="@id/tv_point_4"

            android:layout_marginStart="10dp"

            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="I Understand"
            android:textAllCaps="false" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>